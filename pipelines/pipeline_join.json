{
  "pipeline": {
    "name": "join_segments"
  },
  "description": "Take the segment shapes with associated beaches and join into one object",
  "input": {
    "pfs": {
      "repo": "distancias",
      "glob": "/"
    }
  },
  "transform": {
    "image": "gcr.io/ixplaza/espacial:1",
    "cmd": [ "Rscript", "join_segments.R"],
    "err_cmd": [ "true" ]
  },
  "enable_stats": true,
  "parallelism_spec": { 
    "constant": 4
  }
}
